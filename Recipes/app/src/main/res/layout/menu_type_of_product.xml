<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2FBC2B0"
    tools:context="com.example.Recipes.screens.search">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/meat"
                    android:layout_width="200dp"
                    android:layout_height="230dp"
                    android:background="#05FFFFFF"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="centerCrop"
                    android:translationX="0dp"
                    android:translationY="0dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/aa12"
                    tools:ignore="ContentDescription,MissingConstraints"
                    tools:srcCompat="@drawable/aa12" />

                <ImageButton
                    android:id="@+id/fish"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="#05FFFFFF"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="100dp"
                    android:scaleType="centerCrop"
                    android:translationX="0dp"
                    android:translationY="0dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/aasas"
                    tools:ignore="ContentDescription,MissingConstraints"
                    tools:srcCompat="@drawable/aasas" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Meat"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="middle"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="Мясо"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Fish"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="middle"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="Рыба"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bird"
                    android:layout_width="200dp"
                    android:layout_height="230dp"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/uecm1" />

                <ImageButton
                    android:id="@+id/pasta"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="#05FFFFFF"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="centerCrop"
                    android:translationX="0dp"
                    android:translationY="0dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/pasta_with_tomatoes_1522410080_e1522410131778_630x316"
                    tools:ignore="ContentDescription,MissingConstraints"
                    tools:srcCompat="@drawable/pasta_with_tomatoes_1522410080_e1522410131778_630x316" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Bird"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="middle"
                    android:focusable="auto"
                    android:gravity="center"
                    android:text="Птица"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Pasta"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="middle"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="Макароны"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/potato"
                    android:layout_width="200dp"
                    android:layout_height="230dp"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/aaaaagoryachee_na_novyj_god_2" />

                <ImageButton
                    android:id="@+id/rice"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/aaaasdsd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Potato"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Картофель"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Rice"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Рис"
                    android:textSize="18sp" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>