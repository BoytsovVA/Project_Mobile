<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2FBC2B0"
    tools:context="com.example.Recipes.screens.search">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/french"
                    android:layout_width="200dp"
                    android:layout_height="230dp"
                    android:background="#05FFFFFF"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="fitXY"
                    android:translationX="0dp"
                    android:translationY="0dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/french"
                    tools:ignore="ContentDescription,MissingConstraints"
                    tools:srcCompat="@drawable/french" />

                <ImageButton
                    android:id="@+id/russian"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="#05FFFFFF"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="100dp"
                    android:scaleType="fitXY"
                    android:translationX="0dp"
                    android:translationY="0dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/russ"
                    tools:ignore="ContentDescription,MissingConstraints"
                    tools:srcCompat="@drawable/russ" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/French"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="middle"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="Франзуская кухня"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Russian"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="middle"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="Русская кухня"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/greek"
                    android:layout_width="200dp"
                    android:layout_height="230dp"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/fdn" />

                <ImageButton
                    android:id="@+id/italian"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="#05FFFFFF"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="fitXY"
                    android:translationX="0dp"
                    android:translationY="0dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/italian"
                    tools:ignore="ContentDescription,MissingConstraints"
                    tools:srcCompat="@drawable/italian" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Greek"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="middle"
                    android:focusable="auto"
                    android:gravity="center"
                    android:text="Греческая кухня"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Italian"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="middle"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="Итальянская"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/japanese"
                    android:layout_width="200dp"
                    android:layout_height="230dp"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/jap" />

                <ImageButton
                    android:id="@+id/caucasian"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/hachapuri_po_gruzinski_s_sirom_432754" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Japanese"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Японская кухня"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Caucasian"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Кавказская кухня"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/brazilian"
                    android:layout_width="200dp"
                    android:layout_height="230dp"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/df" />

                <ImageButton
                    android:id="@+id/german"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/dfdjk" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Brazilian"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Бразильская кухня"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/German"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Немецкая кухня"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/english"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="0dp"
                    android:paddingLeft="250dp"
                    android:paddingTop="150dp"
                    android:paddingRight="250dp"
                    android:paddingBottom="150dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/aa" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/English"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Английская кухня"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>